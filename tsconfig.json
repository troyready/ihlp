{
    "compileOnSave": false,
    "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "baseUrl": "src",
      "declaration": true,
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "lib",
      "removeComments": true,
      "rootDirs": [
        "src"
      ],
      "sourceMap": true,
      "strictNullChecks": true,
      "target": "es6",
      "typeRoots": [
        "node_modules/@types"
      ]
    },
    "include": ["src",],
    "typedocOptions": {
      "exclude": [
        "**/*.test.ts",
        "**/__mocks__/*.ts"
      ],
      "mode": "modules",
      "out": "docs"
    }
  }
