{
    "compileOnSave": false,
    "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "baseUrl": "src",
      "declaration": true,
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "lib",
      "removeComments": true,
      "rootDirs": [
        "src"
      ],
      "sourceMap": true,
      "strictNullChecks": true,
      "target": "es6",
      "typeRoots": [
        "node_modules/@types"
      ]
    },
    "include": ["src",]
  }
